<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/infor_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/infor_title"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintLeft_toRightOf="@+id/infor_image"
            app:layout_constraintTop_toTopOf="@+id/infor_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/sp_20"/>

        <ImageView
            android:id="@+id/inf0_imag_tb"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginTop="32dp"
            android:background="@mipmap/ic_lesson_desc_s5"
            app:layout_constraintLeft_toLeftOf="@+id/infor_title"
            app:layout_constraintTop_toTopOf="@+id/infor_title" />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/infor_title"
            android:layout_marginTop="@dimen/dp_9"
            app:layout_constraintLeft_toRightOf="@+id/inf0_imag_tb"
            android:id="@+id/info_gz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/infor_introduce"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dp_150"
            android:textSize="@dimen/dp_10"
            android:singleLine="true"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintRight_toLeftOf="@+id/tv_focus"
            app:layout_constraintLeft_toRightOf="@+id/infor_image" />
        <TextView
            android:id="@+id/tv_focus"
            android:layout_width="45dp"
            android:layout_height="22dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="+ 关注"
            android:textColor="@color/mine_selector"
            android:textSize="@dimen/sp_11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/attention_selector"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>